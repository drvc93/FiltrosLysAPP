<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context="com.filtroslys.filtroslysapp.ListaSolServicios">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_silver_2"
            android:orientation="vertical">




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="2dp">

                    <TextView
                        android:id="@+id/textView61"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="Compania:    " />

                    <Spinner
                        android:id="@+id/spCompSS"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/spiner_style"
                        android:spinnerMode="dialog" />

                    <TextView
                        android:id="@+id/textView69"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="Compania:    " />

                    <EditText
                        android:id="@+id/txtNroSolicit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edittext_round_border"
                        android:ems="10"
                        android:inputType="number" />
                </GridLayout>


                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="2dp">

                    <TextView
                        android:id="@+id/textView66"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Prioridad" />

                    <Spinner
                        android:id="@+id/spPrioridadSS"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/spiner_style"
                        android:dropDownWidth="match_parent"
                        android:spinnerMode="dialog" />

                    <TextView
                        android:id="@+id/textView67"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Maquina" />

                    <Spinner
                        android:id="@+id/spMaquinaSS"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/spiner_style"
                        android:spinnerMode="dialog" />

                </GridLayout>

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="2dp">

                    <TextView
                        android:id="@+id/textView70"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Estado" />

                    <Spinner
                        android:id="@+id/spEstadoSS"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/spiner_style"
                        android:spinnerMode="dialog" />

                    <TextView
                        android:id="@+id/textView71"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Solicitante" />

                    <Spinner
                        android:id="@+id/spUsuarioSolicitanteSS"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/spiner_style"
                        android:spinnerMode="dialog" />
                </GridLayout>

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="2dp">

                    <TextView
                        android:id="@+id/textView63"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="F.Ini" />

                    <EditText
                        android:id="@+id/txtFechaIniSS"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/edittext_round_border"
                        android:clickable="true"
                        android:ems="10"
                        android:focusableInTouchMode="true"
                        android:inputType="textPersonName" />

                    <TextView
                        android:id="@+id/textView62"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="F.Fin: " />

                    <EditText
                        android:id="@+id/txtFechaFinSS"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/edittext_round_border"
                        android:clickable="true"
                        android:ems="10"
                        android:focusableInTouchMode="true"
                        android:inputType="textPersonName" />

                </GridLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:orientation="horizontal">


            </LinearLayout>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FAAC58">

                <TextView
                    android:id="@+id/lblCantRegistrosSS"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#FAAC58"
                    android:text="LISTA DE SOLCITIUDES"
                    android:textStyle="bold"></TextView>

                <Button
                    android:id="@+id/btnBuscarSS"
                    android:layout_width="wrap_content"
                    android:layout_height="35sp"
                    android:layout_gravity="right"
                    android:layout_weight="1"
                    android:background="@drawable/boton_rojo"
                    android:drawableRight="@android:drawable/ic_menu_search"
                    android:textColor="@android:color/white"
                    android:textStyle="bold" />
            </GridLayout>

            <ListView
                android:id="@+id/lvSoliciudesServ"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
