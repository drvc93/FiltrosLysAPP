<?xml version="1.0" encoding="utf-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#fc0101" />
            <stroke android:width="1dp" android:color="#e20e12" />
            <corners android:radius="2dp" />
            <padding android:left="5dp" android:top="5dp" android:right="5dp" android:bottom="5dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient android:startColor="#ff0015" android:endColor="@color/colorPrimary" android:angle="270" />
            <stroke android:width="1dp" android:color="#959596" />
            <corners android:radius="2dp" />
            <padding android:left="2dp" android:top="2dp" android:right="2dp" android:bottom="2dp" />
        </shape>
    </item>
</selector>